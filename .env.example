MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app-name&tls=true
PORT=8080
GIN_MODE=debug

# Google Cloud Configuration
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI="True"
GOOGLE_PROJECT_ID=your-project-id
GRPC_SERVICE_URL=your-grpc-service-url
GOOGLE_APPLICATION_CREDENTIALS=service-account.json

# Firebase Authentication Configuration
# Option 1: Service Account Key File Path (use the same file as GOOGLE_APPLICATION_CREDENTIALS)
FIREBASE_SERVICE_ACCOUNT_PATH=service-account.json
# Option 2: Use Application Default Credentials (recommended for production)
# Comment out FIREBASE_SERVICE_ACCOUNT_PATH to use ADC automatically

# Google Cloud Storage Configuration for document storage
GCS_BUCKET_NAME=your-document-storage-bucket

# Redis Configuration (for background tasks and metrics)
REDIS_ADDR=localhost:6379

# CORS Configuration (optional - defaults are provided)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization